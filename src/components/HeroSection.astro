---
// src/components/HeroSection.astro
interface Props {
  headline?: string;
  subline?: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
  philippImage?: string;
  productImage?: string;
  trustItems?: string[];
}

const {
  headline = "Lichtlösungen, die Sie sonst nirgendwo kaufen können",
  subline = "Weil sie nur für Sie entwickelt und produziert werden – maßgeschneidert nach Ihren Anforderungen von Österreichs Experten für Lichtoberflächen",
  primaryButtonText = "Kostenlose Lichtberatung vereinbaren",
  primaryButtonLink = "#kontakt",
  secondaryButtonText = "Projektbeispiele ansehen",
  secondaryButtonLink = "#projekte",
  philippImage = "/images/philipp-weissel.jpg",
  productImage = "/images/pendelleuchte.jpg",
  trustItems = [
    "Kostenlose Erstberatung",
    "Über 30 Jahre Erfahrung", 
    "DACH-weiter Service"
  ]
} = Astro.props;
---

<section class="hero" id="hero">
  <!-- Floating Elements -->
  <div class="floating-element floating-1" aria-hidden="true"></div>
  <div class="floating-element floating-2" aria-hidden="true"></div>
  <div class="floating-element floating-3" aria-hidden="true"></div>

  <div class="hero-container">
    <!-- Content Bereich -->
    <div class="hero-content">
     <h1 class="hero-headline">
        {headline}
      </h1>
      
      <p class="hero-subline">
        {subline}
      </p>

      <div class="hero-cta">
        <a href={primaryButtonLink} class="btn btn-primary">
          {primaryButtonText}
        </a>
        <a href={secondaryButtonLink} class="btn btn-secondary">
          {secondaryButtonText}
        </a>
      </div>

      <div class="hero-trust">
        {trustItems.map((item) => (
          <div class="trust-item">{item}</div>
        ))}
      </div>
    </div>

    <!-- Visual Bereich -->
    <div class="hero-visual">
      <div class="visual-grid">
        <!-- Philipp Weissel bei der Arbeit -->
        <div class="visual-item visual-philipp">
          <img 
            src={philippImage} 
            alt="Philipp Weissel bei der Entwicklung einer MATHELON Lichtlösung"
            loading="eager"
            width="600"
            height="800"
          />
        </div>

        <!-- MATHELON Pendelleuchte -->
        <div class="visual-item visual-product">
          <img 
            src={productImage} 
            alt="Exquisite MATHELON Pendelleuchte aus österreichischem Eichenholz"
            loading="eager"
            width="400"
            height="400"
          />
        </div>

        <!-- Accent Bereich -->
        <div class="visual-item visual-accent">
          <div class="accent-text">
            <span class="accent-highlight">30+ Jahre</span>
            Erfahrung in der Entwicklung individueller Lichtlösungen
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <span class="scroll-text">Mehr erfahren</span>
    <div class="scroll-arrow"></div>
  </div>
</section>

<style>
  /* CSS Custom Properties */
  :root {
    --primary-color: #d4ac0d;
    --primary-dark: #b7950b;
    --text-dark: #2c3e50;
    --text-light: #6c757d;
    --bg-light: #f8f9fa;
    --bg-gradient: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    --shadow: 0 10px 30px rgba(0,0,0,0.1);
    --border-radius: 20px;
    --container-width: 1400px;
    --transition: all 0.3s ease;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    background: var(--bg-gradient);
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 70%, rgba(212, 172, 13, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 4rem;
    position: relative;
    z-index: 2;
  }

  /* Content Seite (Links) */
  .hero-content {
    animation: slideInLeft 1s ease-out;
  }

  .hero-headline {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero-headline .highlight {
    color: var(--primary-color);
    position: relative;
  }

  .hero-headline .highlight::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), #f1c40f);
    border-radius: 2px;
  }

  .hero-subline {
    font-size: 1.25rem;
    color: var(--text-light);
    margin-bottom: 2.5rem;
    line-height: 1.6;
    max-width: 90%;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: var(--transition);
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-color), #f1c40f);
    color: white;
    box-shadow: 0 4px 15px rgba(212, 172, 13, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 172, 13, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-dark);
    border: 2px solid var(--text-dark);
  }

  .btn-secondary:hover {
    background: var(--text-dark);
    color: white;
    transform: translateY(-2px);
  }

  .hero-trust {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-top: 1rem;
    opacity: 0.8;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: var(--text-light);
    position: relative;
    padding-left: 1.5rem;
  }

  .trust-item::before {
    content: "✓";
    color: var(--primary-color);
    font-weight: bold;
    font-size: 1.1rem;
    position: absolute;
    left: 0;
  }

  /* Visual Seite (Rechts) */
  .hero-visual {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: slideInRight 1s ease-out;
  }

  .visual-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    width: 100%;
    height: 80vh;
    max-height: 600px;
  }

  .visual-item {
    position: relative;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.5s ease;
  }

  .visual-item:hover {
    transform: scale(1.02);
  }

  .visual-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .visual-item:hover img {
    transform: scale(1.05);
  }

  /* Philipp Bild - Linke Spalte, nimmt beide Reihen ein */
  .visual-philipp {
    grid-row: 1 / 3;
    background: linear-gradient(135deg, var(--bg-light), #e9ecef);
  }

  /* Produkt Bild - Rechte Spalte oben */
  .visual-product {
    grid-row: 1;
    background: var(--bg-light);
  }

  /* Zusätzlicher Bereich für Text */
  .visual-accent {
    grid-row: 2;
    background: linear-gradient(135deg, var(--text-dark), #34495e);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .accent-text {
    color: white;
    text-align: center;
    font-size: 1.1rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .accent-highlight {
    color: var(--primary-color);
    font-weight: 700;
    font-size: 1.3rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  /* Floating Elements */
  .floating-element {
    position: absolute;
    background: rgba(212, 172, 13, 0.1);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
    pointer-events: none;
  }

  .floating-1 {
    width: 100px;
    height: 100px;
    top: 10%;
    right: 10%;
    animation-delay: 0s;
  }

  .floating-2 {
    width: 60px;
    height: 60px;
    bottom: 20%;
    left: 10%;
    animation-delay: 2s;
  }

  .floating-3 {
    width: 80px;
    height: 80px;
    top: 60%;
    right: 30%;
    animation-delay: 4s;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-light);
    animation: bounce 2s infinite;
    cursor: pointer;
  }

  .scroll-text {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    border-right: 2px solid var(--primary-color);
    border-bottom: 2px solid var(--primary-color);
    transform: rotate(45deg);
  }

  /* Animations */
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .hero-content {
      text-align: center;
      order: 2;
    }

    .hero-visual {
      order: 1;
      height: 50vh;
    }

    .visual-grid {
      grid-template-columns: 1fr;
      height: auto;
      gap: 1rem;
    }

    .visual-philipp {
      grid-row: auto;
      height: 300px;
    }

    .visual-product {
      height: 200px;
    }

    .visual-accent {
      height: 150px;
      padding: 1rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 2rem 0;
    }

    .hero-container {
      padding: 1rem;
      min-height: 90vh;
    }

    .hero-headline {
      font-size: 2.5rem;
      text-align: center;
    }

    .hero-subline {
      font-size: 1.1rem;
      max-width: 100%;
      text-align: center;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }

    .hero-trust {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .floating-element {
      display: none;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-content,
    .hero-visual,
    .floating-element,
    .scroll-indicator {
      animation: none;
    }
    
    .visual-item,
    .btn {
      transition: none;
    }
  }

  /* Focus States */
  .btn:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }

  .scroll-indicator:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }
</style>

<script>
  // Smooth Scroll für CTA Links und Scroll Indicator
  document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll für Anker-Links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Scroll Indicator Click Handler
    const scrollIndicator = document.querySelector('.scroll-indicator');
    if (scrollIndicator) {
      scrollIndicator.addEventListener('click', function() {
        window.scrollTo({
          top: window.innerHeight,
          behavior: 'smooth'
        });
      });
    }

    // Parallax Effect für Floating Elements
    let ticking = false;
    
    function updateParallax() {
      const scrolled = window.pageYOffset;
      const parallaxElements = document.querySelectorAll('.floating-element');
      
      parallaxElements.forEach((element, index) => {
        const speed = 0.5 + (index * 0.1);
        element.style.transform = `translateY(${scrolled * speed}px)`;
      });
      
      ticking = false;
    }

    function requestTick() {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }

    // Nur Parallax hinzufügen wenn User motion bevorzugt
    if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      window.addEventListener('scroll', requestTick);
    }
  });
</script>